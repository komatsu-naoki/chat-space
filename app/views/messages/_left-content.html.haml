.chat-left{"data-turbolinks": "false"}
 .chat-left__user-name
  .chat-left__user-name__box
   .chat-left__user-name__box__name
    = current_user.name
   .chat-left__user-name__box__in{"data-turbolinks": "false"}
    = link_to new_group_path do
     = fa_icon "pencil-square-o"
    = link_to edit_user_path(current_user) do
     = fa_icon "cog"
 .chat-left__group
  .chat-left__group__box
   - current_user.groups.each do |group|
    = link_to group_messages_path(group) do
     .chat-left__group__box__in
      .chat-left__group__box__in__name
       = group.name
      .chat-left__group__box__in__comment
       = group.show_last_message