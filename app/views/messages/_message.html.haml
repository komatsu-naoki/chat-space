.chat-right__comment__box{data: {id: "#{message.id}"}}
  .chat-right__comment__box__name
    .chat-right__comment__box__name__user
      = message.user.name
    .chat-right__comment__box__name__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-right__comment__box__message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

    
   
    
    